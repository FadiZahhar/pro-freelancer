<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site">
	<name>mod_torbeynewsletterbox</name>
	<author>Fadi Nicolas Zahhar ,Pro-Freelancer</author>
	<creationDate>January 2014</creationDate>
	<copyright>Copyright (C) 2012 - 2014 Aziz Torbey. All rights reserved.</copyright>
	<license>Aziz Torbey.Copyright (C) 2012 - 2014 Aziz Torbey. All rights reserved.</license>
	<authorEmail>info@fnz.me</authorEmail>
	<authorUrl>https://www.facebook.com/ProFreelancer79</authorUrl>
	<version>3.0.0</version>
	<description>MOD_CUSTOM_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_custom">mod_custom.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_custom.ini</language>
		<language tag="en-GB">en-GB.mod_custom.sys.ini</language>
	</languages>

	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_CUSTOM_HTML" />
	<config>
		<fields name="params">
			<fieldset name="options" label="Setting the newsletter form of torbey">
				
            <field name="labelmsg" type="textarea" 
                default="Subscribe To Our Newsletter" 
                label="Label Message" 
                description="Label Message" 
                rows="10" cols="30" filter="raw"/>
                        <field name="enteremail" type="textarea" 
                default="Enter your e-mail" 
                label="Email Input" 
                description="REmail Input" 
                rows="10" cols="30" filter="raw"/>
                        
                                    <field name="validatemsg" type="textarea" 
                default="Kindly provide a valid e-mail address" 
                label="Validate Message" 
                description="Validate Message" 
                rows="10" cols="30" filter="raw"/>
                        <field name="successmsg" type="textarea" 
                default="Subscriber added successfully" 
                label="Success Messge" 
                description="Success Message" 
                rows="10" cols="30" filter="raw"/>
                        
                        
                        <field name="submitbtn" type="textarea" 
                default="Subscribe" 
                label="Subscribe" 
                description="Subscribe" 
                rows="10" cols="30" filter="raw"/>
                        
                        <field name="linkedinurl" type="textarea" 
                default="http://www.linkedin.com/company/2415253" 
                label="Linked IN URL" 
                description="Linked IN URL" 
                rows="10" cols="30" filter="raw"/>
                        
                        <field name="twitterurl" type="textarea" 
                default="https://twitter.com/@torbeylaw" 
                label="Twitter URL" 
                description="Twitter URL" 
                rows="10" cols="30" filter="raw"/>
                        
                        
            </fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
